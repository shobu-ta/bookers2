<div class="col-md-3">
  <h2>User info</h2>
  <table class="table">
  <% if current_user %>
    <%= image_tag(current_user.profile_image.attached? ? current_user.profile_image.variant(resize: '100x100') : 'default-image.jpg', size: '100x100', alt: 'Profile Image') %>
    <tr>
      <th>Name</th>
      <td><%= current_user.name %></td>
    </tr>
    <tr>
      <th>Introduction</th>
      <td><%= current_user.introduction %></td>
    </tr>
    <tr>
      <td>
        <a class="btn btn-outline-secondary" href="<%= edit_user_path(current_user) %>">
          Edit User
        </a>
      </td>
    </tr>
  <% end %>
  </table>
</div>

<h2 class="mt-3">New book</h2>

<%= form_with model: @book do |f| %>
<div class="form-group">
    <label for="book_title">Title</label>
    <%= f.text_area :title %>
  </div>
  
<div class="form-group">
<label for="book_opinion">Opinion</label>
<%= f.text_area :opinion %>
</div>
<div class="form-group">
<%= f.submit "Create Book" %>
</div>
<% end %>

<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th>Profile Image</th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @user.books.each do |book| %>
      <tr>
        <td>
        <%= image_tag(book.user.profile_image.attached? ? book.user.profile_image.variant(resize: '100x100') : 'default-image.jpg', size: '100x100', alt: 'Profile Image') %>

        </td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.opinion %></td>
      </tr>
    <% end %>
  </tbody>
</table>
