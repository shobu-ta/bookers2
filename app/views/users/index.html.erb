<div class="container">
  <div class="row">
    <!-- 左側のカラム: User info と New book -->
    <div class="col-md-3  offset-md-1">
      <!-- User info セクション -->
      <h2>User info</h2>
      <table class="table">
        <% if current_user %>
          <%= image_tag(current_user.profile_image.attached? ? current_user.profile_image.variant(resize: '100x100') : 'default-image.jpg', size: '100x100', alt: 'Profile Image') %>
          <tr>
            <th>Name</th>
            <td><%= current_user.name %></td>
          </tr>
          <tr>
            <th>Introduction</th>
            <td><%= current_user.introduction %></td>
          </tr>
          <tr>
            <td>
              <a class="btn btn-outline-secondary" href="<%= edit_user_path(current_user) %>">
                Edit User
              </a>
            </td>
          </tr>
        <% end %>
      </table>

      <!-- New book セクション -->
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_area :title %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :opinion %>
        </div>
        <div class="form-group">
          <%= f.submit "Create Book" %>
        </div>
      <% end %>
    </div>

    <!-- 右側のカラム: Users セクション -->
    <div class="col-md-8">
      <h1>Users</h1>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <% if user.profile_image.attached? %>
                  <%= image_tag user.profile_image.variant(resize: '100x100') %>
                <% else %>
                  <%= image_tag 'default-image.jpg', size: '100x100' %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to 'Show', user_path(user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>