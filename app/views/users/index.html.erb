<h1>Users</h1>

<ul>
  <% @users.each do |user| %>
    <li>
      <% if user.profile_image.attached? %>
        <%= image_tag user.profile_image.variant(resize: '100x100') %>
      <% else %>
        <%= image_tag 'default-image.jpg', size: '100x100' %>
      <% end %>
      <span><%= user.name %></span>
      <%= link_to 'Show', user_path(user) %>
    </li>
  <% end %>
</ul>