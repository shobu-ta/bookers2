<h1>Users</h1>


<table class="table">
<thead>
<tr>
  <th>image</th>
  <th>name</th>
  <th colspan="3"></th>
</tr>
</thead>
<tbody>
  <% @users.each do |user| %>
    <tr>
      <td>
        <% if user.profile_image.attached? %>
          <%= image_tag user.profile_image.variant(resize: '100x100') %>
        <% else %>
          <%= image_tag 'default-image.jpg', size: '100x100' %>
        <% end %>
      </td>  
      <td><%= user.name %></td>
      <td><%= link_to 'Show', user_path(user) %></td>
    </tr>
  <% end %>
</tbody>
</table>