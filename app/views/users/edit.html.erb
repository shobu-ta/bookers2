<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>

    <% if current_user.errors.any? %>
      <div id="error_explanation">
        <h4><%= pluralize(current_user.errors.count, "error") %> prohibited this user from being saved:</h4>
        <ul>
          <% current_user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with(model: current_user, url: user_path(current_user), method: :patch, html: { multipart: true }) do |f| %>
      <div class="form-group">
        <%= f.label :name, "Name" %>
        <%= f.text_field :name, class: "form-control name", id: "user_name" %>
      </div>

      <div class="form-group">
        <%= f.label :profile_image, "Image" %>
        <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file user_image", id: "user_profile_image" %>
      </div>

      <div class="form-group">
        <%= f.label :introduction, "Introduction" %>
        <%= f.text_area :introduction, class: "form-control introduction", id: "user_introduction" %>
      </div>

      <div class="form-group">
        <%= f.submit "Update User", class: "btn btn-secondary", data: { disable_with: "Update User" } %>
      </div>
    <% end %>
  </div>
</div>