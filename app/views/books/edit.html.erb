<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Edit Book</h1>

      <%= form_with(model: @book, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :title, "Title", class: "form-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group mt-3">
          <%= f.label :opinion, "Opinion", class: "form-label" %>
          <%= f.text_area :opinion, class: "form-control", rows: 4 %>
        </div>

        <div class="form-group mt-3">
          <%= f.submit "Update Book", class: "btn btn-success w-20" %>
        </div>

        <div class="form-group mt-3 text-center">
          <%= link_to "Show", book_path(@book), class: "btn btn-link" %> |
          <%= link_to "Back", books_path, class: "btn btn-link" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
