<div class="col-md-3">
  <h2>User info</h2>
  <table class="table">
  <% if current_user %>
    <tr>
      <th>Name</th>
      <td><%= current_user.name %></td>
    </tr>
    <tr>
      <th>Introduction</th>
      <td><%= current_user.introduction %></td>
    </tr>
    <tr>
      <td>
        <a class="btn btn-outline-secondary" href="<%= edit_user_path(current_user) %>">
          Edit User
        </a>
      </td>
    </tr>
  <% end %>
  </table>
</div>

<h2 class="mt-3">New book</h2>

<%= form_with model: @book do |f| %>
<div class="form-group">
    <label for="book_title">Title</label>
    <%= f.text_area :title %>
  </div>
  
<div class="form-group">
<label for="book_opinion">Opinion</label>
<%= f.text_area :body %>
</div>
<div class="form-group">
<%= f.submit "Create Book" %>
</div>
<% end %>

<h2>Books</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.opinion %></td>
      </tr>
    <% end %>
  </tbody>
</table>

