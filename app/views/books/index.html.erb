<div class="container">
  <div class="row">
    <!-- 左カラム: User info と New book -->
    <div class="col-md-4">
      <!-- User info セクション -->
      <h2>User info</h2>
      <table class="table">
        <% if current_user %>
          <%= image_tag(current_user.profile_image.attached? ? current_user.profile_image.variant(resize: '100x100') : 'default-image.jpg', size: '100x100', alt: 'Profile Image') %>
          <tr>
            <th>Name</th>
            <td><%= current_user.name %></td>
          </tr>
          <tr>
            <th>Introduction</th>
            <td><%= current_user.introduction %></td>
          </tr>
          <tr>
            <td>
              <a class="btn btn-outline-secondary" href="<%= edit_user_path(current_user) %>">
                Edit User
              </a>
            </td>
          </tr>
        <% end %>
      </table>

      <!-- New book セクション -->
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_area :title %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :opinion %>
        </div>
        <div class="form-group">
          <%= f.submit "Create Book" %>
        </div>
      <% end %>
    </div>

    <!-- 右カラム: Books -->
    <div class="col-md-8">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>Profile Image</th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <% user = @users.find_by(id: book.user_id) %>
                <% if user && user.profile_image.attached? %>
                  <%= image_tag user.profile_image.variant(resize: '100x100') %>
                <% else %>
                  <%= image_tag 'default-image.jpg', size: '100x100' %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.opinion %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>