<h2>Books</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.opinion %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<a href="<%= new_book_path %>" class="btn btn-success">Add New Book</a>
